extends layout

block content
  h1= title
  p
   - let result = results
    div(class="container-fliud")
        div(class="row")
            each item,ind in result 
                div(class="col-sm-2" onclick=`buy(${ind})`)  
                    p Driver  #{item.driver}
                    p Ranking  #{item.ranking}
    each ite,index in result
        p value at index #{index} is : #{ite.driver},#{ite.ranking}
    script. 
        function buy(i){
            alert("You purchased item "+(i+1))
        }